<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".HealthIndex">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Enter your Age"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <EditText
                android:id="@+id/age_user"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_img"
                android:ems="12"
                android:fontFamily="@font/adamina"
                android:hint="What is your Age ?"
                android:inputType="number|numberDecimal"
                android:paddingStart="5dp"
                android:textColor="#FDF9F9"
                android:textColorHint="#FDF9F9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="How many litres of water do you consume daily ?"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/water_radio_group"
                android:background="@drawable/login_img"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/water_one_litre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="15"
                    android:checked="true"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Less than 1 Litre"/>
                <RadioButton
                    android:id="@+id/water_two_litre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="1 Litre"/>
                <RadioButton
                    android:id="@+id/water_three_litre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="2 Litre"/>
                <RadioButton
                    android:id="@+id/water_four_litre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Greater than or equal to 3 Litre"/>
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="On average how many hours of exercise you do ?"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/exercise_radio_group"
                android:background="@drawable/login_img"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/exercise_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="15"
                    android:checked="true"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Less than an hour"/>
                <RadioButton
                    android:id="@+id/exercise_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="One Hour"/>
                <RadioButton
                    android:id="@+id/exercise_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Two Hour"/>
                <RadioButton
                    android:id="@+id/exercise_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Greater than or equal to Three Hour"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="How good is the distribution of protein, vitamins, carbs in your diet ? &#xA; (answer in the scale of 5 &#xA; 1 - very bad and 5 - very good)"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/diet_radio_group"
                android:background="@drawable/login_img"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/diet_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="15"
                    android:checked="true"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="One"/>
                <RadioButton
                    android:id="@+id/diet_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Two"/>
                <RadioButton
                    android:id="@+id/diet_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Three"/>
                <RadioButton
                    android:id="@+id/diet_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Four"/>
                <RadioButton
                    android:id="@+id/diet_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Five"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="On an average how many miles do you walk ?"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/walk_radio_group"
                android:background="@drawable/login_img"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/walk_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="15"
                    android:checked="true"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="One"/>
                <RadioButton
                    android:id="@+id/walk_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Two"/>
                <RadioButton
                    android:id="@+id/walk_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Three"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="How good is your lifestyle ? (answer in the scale of 5 &#xA; 1 - very bad and 5 - very good)"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/lifestyle_radio_group"
                android:background="@drawable/login_img"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/lifestyle_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="15"
                    android:checked="true"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="One"/>
                <RadioButton
                    android:id="@+id/lifestyle_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Two"/>
                <RadioButton
                    android:id="@+id/lifestyle_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Three"/>
                <RadioButton
                    android:id="@+id/lifestyle_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Four"/>
                <RadioButton
                    android:id="@+id/lifestyle_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Five"/>
            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="Are you a diabetic?"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/diabetic_radio_group"
                android:background="@drawable/login_img"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/diabetic_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="15"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Yes"/>
                <RadioButton
                    android:id="@+id/diabetic_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:checked="true"
                    android:textColor="#FDF9F9"
                    android:text="No"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="How good is your work life balance ? (answer in the scale of 5 &#xA; 1 - very bad and 5 - very good)"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/work_life_balance_radio_group"
                android:background="@drawable/login_img"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/work_life_balance_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:ems="15"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="One"/>
                <RadioButton
                    android:id="@+id/work_life_balance_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Two"/>
                <RadioButton
                    android:id="@+id/work_life_balance_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Three"/>
                <RadioButton
                    android:id="@+id/work_life_balance_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Four"/>
                <RadioButton
                    android:id="@+id/work_life_balance_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Five"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="How about the stress level at workplace ? (answer in the scale of 5 &#xA; 1 - no stress and 5 - highly stressful)"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/stress_radio_group"
                android:background="@drawable/login_img"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/stress_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="15"
                    android:checked="true"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="One"/>
                <RadioButton
                    android:id="@+id/stress_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Two"/>
                <RadioButton
                    android:id="@+id/stress_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Three"/>
                <RadioButton
                    android:id="@+id/stress_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Four"/>
                <RadioButton
                    android:id="@+id/stress_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Five"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="On an average how frequently do you smoke ? (answer in the scale of 5 &#xA; 1 - low and 5 - high)"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/smoke_radio_group"
                android:background="@drawable/login_img"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/smoke_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="15"
                    android:checked="true"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="One"/>
                <RadioButton
                    android:id="@+id/smoke_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Two"/>
                <RadioButton
                    android:id="@+id/smoke_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Three"/>
                <RadioButton
                    android:id="@+id/smoke_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Four"/>
                <RadioButton
                    android:id="@+id/smoke_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Five"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="On an average how much do you consume alcohol ((answer in the scale of 5 &#xA; 1 - low and 5 - high)) ?"
                android:ems="20"
                android:fontFamily="@font/adamina"
                android:textColor="@color/text_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/alcohol_radio_group"
                android:background="@drawable/login_img"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/alcohol_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="15"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:checked="true"
                    android:text="One"/>
                <RadioButton
                    android:id="@+id/alcohol_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Two"/>
                <RadioButton
                    android:id="@+id/alcohol_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Three"/>
                <RadioButton
                    android:id="@+id/alcohol_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Four"/>
                <RadioButton
                    android:id="@+id/alcohol_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:textColor="#FDF9F9"
                    android:text="Five"/>
            </RadioGroup>

            <Button
                android:id="@+id/calculate_health_index"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_design"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:text="Calculate Health Index"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/health_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Result"
                android:ems="15"
                android:visibility="invisible"
                android:textAlignment="center"
                android:fontFamily="@font/adamina"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/health_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:visibility="invisible"
                android:background="@drawable/login_img"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"/>

            <Button
                android:id="@+id/get_advice"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/btn_design"
                android:ems="15"
                android:visibility="invisible"
                android:fontFamily="@font/adamina"
                android:text="Get Advice"
                android:textAlignment="center"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>