<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/city_lights_through_rain_window"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_img"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Weight"
                android:ems="12"
                android:fontFamily="@font/adamina"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"/>
            <EditText
                android:id="@+id/weight_bmi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_img"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:hint="Enter your Weight"
                android:inputType="number|numberDecimal"
                android:paddingStart="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"
                android:textColorHint="#FDF9F9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Height"
                android:ems="12"
                android:fontFamily="@font/adamina"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"/>
            <EditText
                android:id="@+id/height_bmi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_img"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:hint="Enter your Height"
                android:inputType="number|numberDecimal"
                android:paddingStart="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"
                android:textColorHint="#FDF9F9"/>

            <Button
                android:id="@+id/calculate_bmi"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_design"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:text="Calculate BMI"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/bmi_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Result"
                android:ems="15"
                android:visibility="invisible"
                android:textAlignment="center"
                android:fontFamily="@font/adamina"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"/>

            <TextView
                android:id="@+id/bmi_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:text="BMI"
                android:textAlignment="center"
                android:visibility="invisible"
                android:background="@drawable/login_img"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>